<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.Cuisineconnect" parent="Theme.Material3.Light.NoActionBar">
    <item name="android:windowBackground">@color/white</item>
    <item name="colorPrimaryDark">@color/cc_text_dark_green</item>
    <!-- Customize your light theme here. -->
    <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
  </style>

  <style name="Theme.Cuisineconnect" parent="Base.Theme.Cuisineconnect" />

  <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    <item name="itemIconTint">@color/cc_gray</item>
  </style>

  <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="backgroundTint">@color/cc_text_dark_green</item>
    <item name="tint">@color/white</item>
    <item name="fabSize">normal</item>
    <item name="android:scaleType">centerInside</item>
  </style>

  <style name="CustomFABStyleExtended" parent="Widget.MaterialComponents.FloatingActionButton">
    <item name="backgroundTint">@color/cc_light_gray</item>
    <item name="tint">@color/cc_gray</item>
    <item name="fabSize">normal</item>
    <item name="android:scaleType">centerCrop</item>
  </style>

  <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Light">
    <!-- Set the background color to white -->
    <item name="android:popupBackground">@android:color/white</item>
  </style>

  <style name="Theme.Cuisineconnect.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Background color for the splash screen -->
    <item name="android:windowBackground">@color/white</item>
  </style>
</resources>
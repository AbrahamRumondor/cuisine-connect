<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <View
      android:layout_marginVertical="8dp"
      android:id="@+id/v_divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@color/cc_light_gray"
      />


  <TextView
      android:id="@+id/tv_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:layout_marginVertical="8dp"
      android:text="Jan xx"
      android:textColor="@android:color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/v_divider"
      />

  <LinearLayout
      android:id="@+id/ll_title_image"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingHorizontal="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tv_date"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

      <!-- Title TextView -->
      <TextView
          android:id="@+id/tv_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="A Sweet and Sour Dessert?! Under 10$"
          android:textColor="@android:color/black"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constrainedWidth="true"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ImageView -->
    <ImageView
        android:id="@+id/iv_image_title"
        android:layout_width="150dp"
        android:layout_height="112.5dp"
        android:contentDescription="@string/image"
        android:src="@drawable/cc_asset"
        />

  </LinearLayout>

  <TextView
      android:id="@+id/tv_desc"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="16dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:text="This is a very long description that might take more than two lines. If it does, it will be truncated with an aaewfjioawejfoawefjawdjfkladjf ellipsis."
      android:textColor="@android:color/black"
      android:textSize="16sp"
      app:layout_constraintEnd_toStartOf="@id/btn_edit"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ll_title_image"
      />

  <ImageButton
      android:id="@+id/btn_edit"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_marginHorizontal="16dp"
      android:background="@drawable/ic_create_recipe"
      app:layout_constraintBottom_toBottomOf="@+id/tv_desc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/tv_desc"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_desc"

      >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >

      <ImageView
          android:id="@+id/iv_ic_msg"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:contentDescription="@string/image"
          android:src="@drawable/ic_msg_bubble"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:text="98"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/iv_ic_thumbs"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:contentDescription="@string/image"
          android:src="@drawable/ic_thumbs_up_regular"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="5dp"
          android:text="98"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/iv_ic_bookmark"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:contentDescription="@string/image"
          android:src="@drawable/ic_bookmark_regular"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="98"
          />
    </LinearLayout>


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
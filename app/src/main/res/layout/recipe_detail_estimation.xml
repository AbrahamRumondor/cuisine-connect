<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <ImageView
      android:id="@+id/iv_recipe_img"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:contentDescription="@string/image"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:src="@drawable/cc_asset"
      android:scaleType="centerInside"
      />

  <View
      android:id="@+id/v_divider_1"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginTop="24dp"
      android:background="@color/cc_light_gray"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_recipe_img"
      />

  <LinearLayout
      android:id="@+id/ll_time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/v_divider_1"
      >

    <ImageView
        android:id="@+id/iv_clock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="5dp"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_clock"
        app:tint="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Jam 30 Menit"
        android:textColor="@android:color/darker_gray"
        />

    <View
        android:layout_width="30dp"
        android:layout_height="0dp"
        />

    <ImageView
        android:id="@+id/iv_portion"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_people"
        app:tint="@android:color/darker_gray"
        />

    <TextView
        android:id="@+id/tv_portion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:text="4 Orang"
        android:textColor="@android:color/darker_gray"
        />

  </LinearLayout>

  <View
      android:id="@+id/v_divider_2"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginTop="12dp"
      android:layout_marginBottom="34dp"
      android:background="@color/cc_light_gray"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ll_time"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
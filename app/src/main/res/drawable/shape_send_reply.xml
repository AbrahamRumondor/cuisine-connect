<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Define the gradient -->
  <gradient
      android:startColor="@color/cc_light_gray"
      android:centerColor="@color/cc_yellow"
      android:endColor="@color/cc_yellow"
      android:angle="90" />

  <!-- Define the rounded corners (make horizontal corners circular) -->
  <corners
      android:topLeftRadius="200dp"
      android:topRightRadius="200dp"
      android:bottomLeftRadius="200dp"
      android:bottomRightRadius="200dp"/>
</shape>